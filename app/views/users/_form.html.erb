<%= form_with(model: user, local: true) do |form| %>
  <%= render 'shared/form_error_messages', model: user %>

  <%= hidden_field_tag(:token, params[:token]) %>

  <div class="field">
    <%= form.label :login_id %>
    <%= form.text_field :login_id, placeholder: true %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: true %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, placeholder: true %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone, placeholder: true %>
  </div>

  <div class="field">
    <%= form.label :introduction %>
    <%= form.text_area :introduction, placeholder: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
