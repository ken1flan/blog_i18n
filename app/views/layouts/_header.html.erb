<section>
  <%= link_to(t('application_name'), root_path) %>
  <% other_locale = (locale == :ja ? :en : :ja) %>
  (<%= link_to(other_locale.upcase, root_path(lang: other_locale)) %>)
</section>
<section style='text-align: right;'>
  <% if !!current_user %>
    <%= current_user.name %>
    |
    <%= link_to(t('.log_out'), session_path, method: :delete) %>
  <% else %>
    <%= link_to(t('.log_in'), new_session_path) %>
    |
    <%= link_to(t('.sign_up'), new_user_registration_path) %>
  <% end %>
</section>
<section>
  <%= link_to(t('.blogs'), blogs_path) %>
  |
  <%= link_to(t('.users'), users_path) %>
</section>
